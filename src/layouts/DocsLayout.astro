---
/**
 * ドキュメントページ用メインレイアウト
 * SSMO対応: Web/PDF/EPUB共通スタイルを使用
 */
import Breadcrumb from '../components/Breadcrumb.astro';
import SearchBox from '../components/SearchBox.astro';
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
  description?: string;
  lang?: string;
  showBreadcrumb?: boolean;
}

const { title, description = '', lang = 'en', showBreadcrumb = true } = Astro.props;
const currentPath = Astro.url.pathname;
---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Vivliostyle Documentation</title>
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="stylesheet" href="/styles/global.css">
  <!-- Prism.js syntax highlighting -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css" media="(prefers-color-scheme: light)">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" media="(prefers-color-scheme: dark)">
</head>
<body>
  <script>
    // TypeScript型定義を追加
    declare global {
      interface Window {
        __bodyOverflowLockCount: number;
        lockBodyOverflow: () => void;
        unlockBodyOverflow: () => void;
      }
    }
    
    // bodyのoverflowを複数のコンポーネントで安全に管理するためのグローバル機能
    window.__bodyOverflowLockCount = 0;
    window.lockBodyOverflow = function() {
      window.__bodyOverflowLockCount++;
      if (window.__bodyOverflowLockCount === 1) {
        document.body.style.overflow = 'hidden';
      }
    };
    window.unlockBodyOverflow = function() {
      window.__bodyOverflowLockCount = Math.max(0, window.__bodyOverflowLockCount - 1);
      if (window.__bodyOverflowLockCount === 0) {
        document.body.style.overflow = '';
      }
    };
  </script>
  <div class="layout">
    <header class="header">
      <div class="header-content">
        <button class="mobile-menu-toggle" aria-label={lang === 'ja' ? 'メニューを開く' : 'Toggle menu'} aria-expanded="false">
          <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
        <a href={`/${lang}/`} class="logo">
          <img src="/vivliostyle-docs.svg" alt="Vivliostyle Docs" class="logo-image" />
        </a>
        <nav class="header-nav">
          <a href={`/${lang}/viewer/`}>Viewer</a>
          <a href={`/${lang}/cli/`}>CLI</a>
          <a href={`/${lang}/vfm/`}>VFM</a>
          <a href={`/${lang}/themes/`}>Themes</a>
          <a href={`/${lang}/reference/`}>Reference</a>
          <a href="https://github.com/vivliostyle" class="github-link" aria-label="GitHub" target="_blank" rel="noopener noreferrer">
            <svg viewBox="0 0 16 16" width="24" height="24" fill="currentColor">
              <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
            </svg>
          </a>
          <a href={lang === 'ja' ? 'https://vivliostyle.org/ja/' : 'https://vivliostyle.org/'} class="vivliostyle-link" aria-label="Vivliostyle" target="_blank" rel="noopener noreferrer">
            <img src="/vivliostyle-logo72.png" alt="Vivliostyle" class="vivliostyle-icon" />
          </a>
        </nav>
        <div class="header-actions">
          <SearchBox lang={lang as 'en' | 'ja'} />
          <ThemeToggle />
          <div class="lang-switcher">
            <slot name="header" />
          </div>
        </div>
      </div>
    </header>
    
    <div class="sidebar-overlay"></div>
    
    <div class="main-container">
      <aside class="sidebar">
        <div class="sidebar-header">
          <button class="sidebar-close" aria-label={lang === 'ja' ? 'メニューを閉じる' : 'Close menu'}>
            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>
        <div class="sidebar-mobile-controls">
          <div class="mobile-controls-row">
            <ThemeToggle />
            <div class="lang-switcher-mobile">
              <slot name="header" />
            </div>
          </div>
          <div class="mobile-controls-row">
            <a href="https://github.com/vivliostyle" class="sidebar-github-link" aria-label="GitHub" target="_blank" rel="noopener noreferrer">
              <svg viewBox="0 0 16 16" width="24" height="24" fill="currentColor">
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"></path>
              </svg>
            </a>
            <a href={lang === 'ja' ? 'https://vivliostyle.org/ja/' : 'https://vivliostyle.org/'} class="sidebar-vivliostyle-link" aria-label="Vivliostyle" target="_blank" rel="noopener noreferrer">
              <img src="/vivliostyle-logo72.png" alt="Vivliostyle" class="vivliostyle-icon" />
            </a>
          </div>
        </div>
        <slot name="sidebar" />
      </aside>
      
      <main class="content">
        {showBreadcrumb && (
          <Breadcrumb currentPath={currentPath} lang={lang as 'en' | 'ja'} pageTitle={title} />
        )}
        <article class="prose">
          <slot />
        </article>
      </main>
    </div>
    
    <footer class="footer">
      <p>&copy; {new Date().getFullYear()} Vivliostyle Foundation.</p>
    </footer>
  </div>
</body>
</html>

<style>
  /* レイアウト構造 - Web専用スタイル */
  .layout {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  
  /* ヘッダーのスタイルはglobal.cssで定義 */
  
  .header-content {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 0.75rem var(--spacing-page);
    display: flex;
    align-items: center;
    gap: 2rem;
  }
  
  .logo {
    text-decoration: none;
    display: flex;
    align-items: center;
  }
  
  .logo-image {
    height: 32px;
    width: auto;
  }
  
  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-primary);
  }
  
  .header-nav {
    display: flex;
    gap: 1.5rem;
    flex: 1;
    align-items: center;
  }
  
  .header-nav a {
    color: var(--color-text);
    text-decoration: none;
    font-weight: 500;
  }
  
  .header-nav a:hover {
    color: var(--color-primary);
  }
  
  .header-nav .github-link,
  .header-nav .vivliostyle-link {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem;
    margin-left: 0.5rem;
    border-radius: 4px;
    transition: background-color 0.2s;
  }
  
  .header-nav .github-link:hover,
  .header-nav .vivliostyle-link:hover {
    background-color: var(--color-bg-secondary);
    color: var(--color-text);
  }
  
  .header-nav .github-link svg {
    display: block;
    pointer-events: none;
  }
  
  .header-nav .vivliostyle-icon {
    display: block;
    pointer-events: none;
    height: 24px;
    width: 24px;
  }
  
  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  /* 検索ボックス - 幅を固定して他の要素を押し出さないようにする */
  .header-actions > :global(.search-container) {
    flex: 0 0 auto;
    max-width: 200px !important;
    width: 200px;
  }

  /* ThemeToggle - 確実に表示する */
  .header-actions > :global(.theme-toggle) {
    flex: 0 0 auto;
  }

  /* 言語スイッチャー */
  .header-actions > .lang-switcher {
    flex: 0 0 auto;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-text);
    margin-right: 0.5rem;
    border-radius: 4px;
    transition: background-color 0.2s;
  }
  
  .mobile-menu-toggle:hover {
    background-color: var(--color-bg-secondary);
  }
  
  .mobile-menu-toggle:active {
    transform: scale(0.95);
  }
  
  .sidebar-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1090;
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  .sidebar-overlay.active {
    display: block;
    opacity: 1;
  }
  
  .sidebar-header {
    display: none;
    justify-content: flex-end;
    padding: 0.5rem;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 1rem;
  }
  
  .sidebar-close {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-text);
    border-radius: 4px;
    transition: background-color 0.2s;
  }
  
  .sidebar-close:hover {
    background-color: var(--color-bg-secondary);
  }
  
  .sidebar-close:active {
    transform: scale(0.95);
  }
  
  .lang-switcher {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-shrink: 0;
    white-space: nowrap;
  }
  
  .lang-switcher .separator {
    color: var(--color-text-muted);
  }
  
  .lang-switcher a {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    white-space: nowrap;
  }
  
  .lang-switcher a.active {
    font-weight: bold;
    color: var(--color-text);
  }
  
  /* サイドバー内のモバイルコントロール（デフォルトは非表示） */
  .sidebar-mobile-controls {
    display: none;
    flex-direction: column;
    padding: 1rem;
    border-bottom: 1px solid var(--color-border);
    margin-bottom: 1rem;
    gap: 0.75rem;
    align-items: center;
  }
  
  .mobile-controls-row {
     display: flex;
     gap: 1.5rem;
     align-items: center;
     justify-content: center;
     width: 100%;
  }
  
  .lang-switcher-mobile {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    white-space: nowrap; /* 改行を防ぐ */
  }
  
  .lang-switcher-mobile .separator {
    color: var(--color-text-muted);
  }
  
  .lang-switcher-mobile a {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  
  .lang-switcher-mobile a.active {
    font-weight: bold;
    color: var(--color-text);
  }

  .sidebar-github-link {
    display: flex;
    align-items: center;
    color: var(--color-text);
    padding: 0.25rem;
    border-radius: 4px;
    transition: background-color 0.2s;
    flex-shrink: 0;
  }
  
  .sidebar-github-link:hover {
    background-color: var(--color-bg-secondary);
  }

  .sidebar-vivliostyle-link {
    display: flex;
    align-items: center;
    padding: 0.25rem;
    border-radius: 4px;
    transition: background-color 0.2s;
    line-height: 0;
    flex-shrink: 0;
  }
  
  .sidebar-vivliostyle-link:hover {
    background-color: var(--color-bg-secondary);
  }
  
  .sidebar-vivliostyle-link img {
     height: 24px;
     width: auto;
     display: block;
  }
  
  .main-container {
    display: flex;
    flex: 1;
    max-width: var(--content-max-width);
    margin: 0 auto;
    width: 100%;
    padding-top: var(--header-height);
  }
  
  .sidebar {
    width: var(--sidebar-width);
    padding: var(--spacing-page);
    border-right: 1px solid var(--color-border);
    position: sticky;
    top: 4rem;
    height: calc(100vh - 4rem);
    overflow-y: auto;
    font-size: 1rem;
  }
  
  .sidebar :global(nav),
  .sidebar :global(ul),
  .sidebar :global(li),
  .sidebar :global(a) {
    font-size: 1rem;
  }
  
  .content {
    flex: 1;
    padding: var(--spacing-page);
    min-width: 0;
  }
  
  .footer {
    border-top: 1px solid var(--color-border);
    padding: 2rem var(--spacing-page);
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  
  .footer a {
    color: var(--color-primary);
  }
  
  /* レスポンシブ */
  @media (max-width: 1024px) {
    .main-container {
      padding-right: 0;
    }
    
    /* 中間サイズ: 検索ボックス調整 */
    .search-container {
      max-width: 240px;
    }
    
    .header-nav {
      gap: 0.5rem;
      font-size: 0.85rem;
    }
    
    .header-content {
      gap: 0.5rem;
    }
    
    .header-actions {
      gap: 0.25rem;
    }
    
    .logo-image {
      height: 28px;
    }
  }
  
  /* タブレット・モバイルサイズ: ナビ非表示、ハンバーガー表示、サイドバーオーバーレイ化 */
  @media (max-width: 900px) {
    .mobile-menu-toggle {
      display: block;
    }

    .header-nav {
      display: none;
    }

    .header-content {
      gap: 0.5rem;
      padding: 0.5rem 0.75rem;
    }
    
    .logo-image {
      height: 26px;
    }

    .header-actions {
      gap: 0.5rem;
      flex: 1;
      justify-content: flex-end;
    }

    /* 検索ボックスを柔軟に */
    .header-actions > :global(.search-container) {
      flex: 1;
      max-width: none !important;
      width: auto !important;
      min-width: 100px;
    }

    /* ヘッダーのダークモードトグルと言語スイッチを非表示 -> サイドバーへ */
    .header-actions > :global(.theme-toggle) {
      display: none !important;
    }

    .header-actions .lang-switcher {
      display: none;
    }
    
    /* サイドバー内のモバイルコントロールを表示 */
    .sidebar-mobile-controls {
      display: flex;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: -100%;
      width: 280px;
      max-width: 80vw;
      height: 100vh;
      z-index: 1100;
      background: var(--color-bg);
      border-right: 1px solid var(--color-border);
      transition: left 0.3s ease;
      overflow-y: auto;
    }

    .sidebar.active {
      left: 0;
    }

    .sidebar-header {
      display: flex;
    }
    
    .content {
      padding: 1rem;
    }
  }
  
  @media (max-width: 640px) {
    .header-content {
      gap: 0.5rem;
      padding: 0.75rem 1rem;
    }
    
    .logo-image {
      height: 28px;
    }
    
    .header-actions {
      gap: 0.25rem;
    }
    
    .lang-switcher {
      gap: 0.25rem;
    }
  }
  
  /* 印刷時はヘッダー・フッター・サイドバーを非表示 */
  @media print {
    .header,
    .footer,
    .sidebar,
    .lang-switcher {
      display: none !important;
    }
    
    .main-container {
      display: block;
    }
    
    .content {
      padding: 0;
    }
  }
</style>

<script>
  // モバイルメニュー機能
  const initMobileMenu = () => {
    const menuToggle = document.querySelector('.mobile-menu-toggle') as HTMLButtonElement;
    const sidebar = document.querySelector('.sidebar') as HTMLElement;
    const sidebarClose = document.querySelector('.sidebar-close') as HTMLButtonElement;
    const overlay = document.querySelector('.sidebar-overlay') as HTMLElement;
    
    if (!menuToggle || !sidebar || !overlay) {
      return;
    }
    
    const openMenu = () => {
      sidebar.classList.add('active');
      overlay.classList.add('active');
      menuToggle.setAttribute('aria-expanded', 'true');
      window.lockBodyOverflow();
    };
    
    const closeMenu = () => {
      sidebar.classList.remove('active');
      overlay.classList.remove('active');
      menuToggle.setAttribute('aria-expanded', 'false');
      window.unlockBodyOverflow();
    };
    
    // イベントリスナーを追加（onclick代入で直接上書き）
    menuToggle.onclick = openMenu;
    overlay.onclick = closeMenu;
    
    // 閉じるボタン
    if (sidebarClose) {
      sidebarClose.onclick = (e) => {
        e.preventDefault();
        e.stopPropagation();
        closeMenu();
      };
    }
    
    // サイドバー内のリンククリックで閉じる（重複防止）
    sidebar.querySelectorAll('a').forEach(link => {
      if (!link.dataset.clickListenerAdded) {
        link.addEventListener('click', () => {
          // モバイル表示の時のみ閉じる
          if (window.innerWidth <= 900) {
            closeMenu();
          }
        });
        link.dataset.clickListenerAdded = 'true';
      }
    });
    
    // Escapeキーで閉じる
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && sidebar.classList.contains('active')) {
        closeMenu();
      }
    });
    
    // ウィンドウリサイズ時の処理
    let resizeTimer: ReturnType<typeof setTimeout>;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = window.setTimeout(() => {
        if (window.innerWidth > 900 && sidebar.classList.contains('active')) {
          closeMenu();
        }
      }, 250);
    });
  };
  
  // DOMContentLoaded時に初期化
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileMenu);
  } else {
    initMobileMenu();
  }
</script>
