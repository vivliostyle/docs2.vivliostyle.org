          showImages: false,
          showSubResults: true,
          excerptLength: 15,
          translations: lang === 'ja' ? {
            placeholder: 'ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã‚’æ¤œç´¢...',
            clear_search: 'âœ•',
            load_more: 'ã•ã‚‰ã«èª­ã¿è¾¼ã‚€',
            search_label: 'æ¤œç´¢',
            filters_label: 'ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼',
            zero_results: 'çµæœãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã§ã—ãŸã€‚',
            many_results: '[SEARCH_TERM] ã®æ¤œç´¢çµæœ: [COUNT] ä»¶',
            one_result: '[SEARCH_TERM] ã®æ¤œç´¢çµæœ: 1 ä»¶',
            alt_search: '[SEARCH_TERM] ã®æ¤œç´¢çµæœã¯ã‚ã‚Šã¾ã›ã‚“ã€‚ä»£ã‚ã‚Šã« [DIFFERENT_TERM] ã‚’æ¤œç´¢ä¸­',
            search_suggestion: '[SEARCH_TERM] ã®æ¤œç´¢çµæœã¯ã‚ã‚Šã¾ã›ã‚“ã€‚ä»¥ä¸‹ã®ã„ãšã‚Œã‹ã‚’è©¦ã—ã¦ãã ã•ã„:',
            searching: 'æ¤œç´¢ä¸­...',
          } : {
            clear_search: 'âœ•',
          },
