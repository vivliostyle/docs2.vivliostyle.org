{!isDev && (
<script>
  // Pagefind UI ã®åˆæœŸåŒ–
  const initPagefind = async () => {
    try {
      // Pagefind UIã‚’ã‚°ãƒ­ãƒ¼ãƒãƒ«ã‚¹ã‚³ãƒ¼ãƒ—ã«èª­ã¿è¾¼ã‚€
      await import('/_pagefind/pagefind-ui.js');
      
      // ã‚°ãƒ­ãƒ¼ãƒãƒ«ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‹ã‚‰PagefindUIã‚’å–å¾—
      // @ts-ignore
