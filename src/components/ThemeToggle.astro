---
/**
 * ダークモード切り替えボタン
 * ライト/ダーク/システム設定の3つのモードに対応
 */
---

<button class="theme-toggle" data-theme-mode="auto" aria-label="テーマ切り替え" title="テーマ切り替え">
  <svg class="theme-icon sun" viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none">
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  <svg class="theme-icon moon" viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
  <svg class="theme-icon auto" viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
    <path d="M0 0h24v24H0z" fill="none"/>
    <path d="M10.85 12.65h2.3L12 11l-1.15 1.65zM20 8.69V4h-4.69L12 .69 8.69 4H4v4.69L.69 12 4 15.31V20h4.69L12 23.31 15.31 20H20v-4.69L23.31 12 20 8.69zM14.3 16l-.7-2h-3.2l-.7 2H7.8L11 7h2l3.2 9h-1.9z"/>
  </svg>
</button>

<style>
  .theme-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-text);
    border-radius: 4px;
    transition: background-color 0.2s;
    flex-shrink: 0;
    min-width: 36px;
    min-height: 36px;
    position: relative;
    z-index: 1;
  }
  
  .theme-toggle:hover {
    background-color: var(--color-bg-secondary);
  }
  
  .theme-toggle:active {
    transform: scale(0.95);
  }
  
  .theme-icon {
    display: none;
    pointer-events: none; /* SVGがクリックをブロックしないようにする */
  }
  
  /* ライトモード時は太陽アイコンを表示 */
  .theme-toggle[data-theme-mode="light"] .theme-icon.sun {
    display: block;
  }
  
  /* ダークモード時は月アイコンを表示 */
  .theme-toggle[data-theme-mode="dark"] .theme-icon.moon {
    display: block;
  }
  
  /* autoモード時は循環矢印アイコンを表示 */
  .theme-toggle[data-theme-mode="auto"] .theme-icon.auto {
    display: block;
  }
  
  /* 印刷時は非表示 */
  @media print {
    .theme-toggle {
      display: none;
    }
  }
</style>

<script>
  // テーマ管理
  const STORAGE_KEY = 'theme-preference';
  
  type Theme = 'light' | 'dark' | 'auto';
  
  // ローカルストレージからテーマ設定を読み込み
  function getStoredTheme(): Theme {
    const stored = localStorage.getItem(STORAGE_KEY);
    if (stored === 'light' || stored === 'dark' || stored === 'auto') {
      return stored;
    }
    return 'auto';
  }
  
  // システムのダークモード設定を取得
  function getSystemTheme(): 'light' | 'dark' {
    return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
  }
  
  // 適用するテーマを決定
  function getEffectiveTheme(preference: Theme): 'light' | 'dark' {
    if (preference === 'auto') {
      return getSystemTheme();
    }
    return preference;
  }
  
  // テーマをDOMに適用
  function applyTheme(theme: 'light' | 'dark') {
    const root = document.documentElement;
    if (theme === 'dark') {
      root.setAttribute('data-theme', 'dark');
    } else {
      root.setAttribute('data-theme', 'light');
    }
  }
  
  // autoモード時: data-theme属性を削除してシステム設定に従う
  function applyAutoMode() {
    const root = document.documentElement;
    root.removeAttribute('data-theme');
  }
  
  // テーマを切り替え
  function cycleTheme() {
    const current = getStoredTheme();
    let next: Theme;
    
    // light → dark → auto → light のサイクル
    if (current === 'light') {
      next = 'dark';
    } else if (current === 'dark') {
      next = 'auto';
    } else {
      next = 'light';
    }
    
    localStorage.setItem(STORAGE_KEY, next);
    
    // autoモードの場合は属性を削除、それ以外は適用
    if (next === 'auto') {
      applyAutoMode();
    } else {
      applyTheme(getEffectiveTheme(next));
    }
    
    // アクセシビリティ: 変更を通知
    updateAriaLabel(next);
    updateButtonIcon(next);
  }
  
  // ボタンのアイコン表示を更新
  function updateButtonIcon(theme: Theme) {
    const buttons = document.querySelectorAll('.theme-toggle') as NodeListOf<HTMLButtonElement>;
    buttons.forEach(button => {
      button.setAttribute('data-theme-mode', theme);
    });
  }
  
  // ボタンのaria-labelを更新
  function updateAriaLabel(theme: Theme) {
    const buttons = document.querySelectorAll('.theme-toggle') as NodeListOf<HTMLButtonElement>;
    
    const currentLang = document.documentElement.lang || 'ja';
    const labels = {
      ja: {
        light: 'ダークモードに切り替え',
        dark: 'システム設定に従う',
        auto: 'ライトモードに切り替え',
      },
      en: {
        light: 'Switch to dark mode',
        dark: 'Follow system settings',
        auto: 'Switch to light mode',
      },
    };
    const themeLabels = labels[currentLang] || labels.en;
    
    buttons.forEach(button => {
      button.setAttribute('aria-label', themeLabels[theme]);
      button.setAttribute('title', themeLabels[theme]);
    });
  }
  
  // 初期化
  function initTheme() {
    const preference = getStoredTheme();
    updateAriaLabel(preference);
    updateButtonIcon(preference);
    
    // autoモードの場合は属性を削除、それ以外は適用
    if (preference === 'auto') {
      applyAutoMode();
    } else {
      applyTheme(getEffectiveTheme(preference));
    }
    
    // システム設定の変更を監視（autoモードの時のみ）
    window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
      if (getStoredTheme() === 'auto') {
        // autoモード時はdata-theme属性なしでシステム設定に従う
        applyAutoMode();
      }
    });
  }
  
  // ボタンのクリックイベント
  function setupToggle() {
    const buttons = document.querySelectorAll('.theme-toggle');
    buttons.forEach(button => {
      button.addEventListener('click', cycleTheme);
    });
  }
  
  // ページロード前にテーマを適用（ちらつき防止）
  initTheme();
  
  // DOMContentLoaded後にイベントリスナーを設定
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupToggle);
  } else {
    setupToggle();
  }
</script>
