---
/**
 * CLI ドキュメントページ（日本語版）
 * 動的ルーティング: /ja/cli/* にマッチ
 */
import DocsLayout from '../../../layouts/DocsLayout.astro';
import LanguageSwitcher from '../../../components/LanguageSwitcher.astro';
import PageNavigation from '../../../components/PageNavigation.astro';
import TableOfContents from '../../../components/TableOfContents.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const cliDocs = await getCollection('vivliostyle-cli-ja');
  const cliDocsEn = await getCollection('vivliostyle-cli-en');
  
  // 英語版に存在するIDのセットを作成
  const enIds = new Set(cliDocsEn.map(d => d.id));

  // 重複を避けるため、処理済みIDを追跡
  const processedIds = new Set();

  return cliDocs.map(doc => {
    // doc.idから ja/ プレフィックスを除去（日本語ファイルの場合）
    let docId = doc.id;
    if (docId.startsWith('ja/')) {
      docId = docId.substring(3);
    } else if (docId === 'ja') {
      // ja/index.mdから生成されたjaはindexとして扱う
      docId = 'index';
    }
    // 空文字列の場合はindexとして扱う
    if (!docId || docId === '') {
      docId = 'index';
    }
    
    // 重複チェック：すでに処理済みのIDはスキップ
    if (processedIds.has(docId)) {
      return null;
    }
    processedIds.add(docId);
    
    // [...slug]パターンでは文字列でslugを渡す
    // indexの場合はundefinedでルートパス（/ja/cli/）に
    // それ以外はdocIdをそのまま渡す（例: "getting-started"）
    const slug = docId === 'index' ? undefined : docId;

    // 英語版が存在するかチェック
    // config と api-javascript は両方の言語で共有されている
    // その他のファイルも英語版が存在する
    const hasTranslation = enIds.has(docId);
    
    return {
      params: { slug },
      props: { 
        doc,
        docId, // ja/ プレフィックスを除去したID
        cliDocs,
        hasEnTranslation: hasTranslation
      },
    };
  }).filter(Boolean); // nullを除外
}

const { doc, docId, cliDocs, hasEnTranslation } = Astro.props;
const htmlContent = doc.rendered?.html || '';
const title = doc.data?.title || 'CLI ドキュメント';
const description = doc.data?.description || '';
const doctocToc = doc.data?.doctocToc; // doctoc TOC（存在する場合）

// 見出しから目次を生成
const headings = doc.data?.headings || [];

// index.mdに記載されている順番でソート
const pageOrder = [
  'index',
  'getting-started',
  'themes-and-css',
  'using-config-file',
  'toc-page',
  'cover-page',
  'special-output-settings',
  'frontend-framework-support',
  'config',
  'api-javascript',
];

// サイドバー用に重複を排除: ja/ プレフィックスを除去したIDで一意にする
const uniqueDocs = new Map();
cliDocs.forEach(doc => {
  // 'ja' IDは除外（これはja/index.mdから生成された重複）
  if (doc.id === 'ja') return;
  
  // ja/ プレフィックスを除去してIDを正規化
  const normalizedId = doc.id.startsWith('ja/') ? doc.id.substring(3) : doc.id;
  
  // 既に存在しない場合のみ追加（ja/ プレフィックス付きを優先）
  if (!uniqueDocs.has(normalizedId)) {
    uniqueDocs.set(normalizedId, { ...doc, normalizedId });
  } else if (doc.id.startsWith('ja/')) {
    // ja/ プレフィックス付きのドキュメントで上書き（こちらを優先）
    uniqueDocs.set(normalizedId, { ...doc, normalizedId });
  }
});

const sortedDocs = Array.from(uniqueDocs.values()).sort((a, b) => {
  const indexA = pageOrder.indexOf(a.normalizedId);
  const indexB = pageOrder.indexOf(b.normalizedId);
  // リストにない項目は最後に配置
  const orderA = indexA === -1 ? 999 : indexA;
  const orderB = indexB === -1 ? 999 : indexB;
  return orderA - orderB;
});

// 現在のページのパス（indexの場合は /ja/cli/、それ以外は /ja/cli/xxx/）
const currentPath = docId === 'index' ? '/ja/cli/' : `/ja/cli/${docId}/`;
const pagePath = docId === 'index' ? '/cli/' : `/cli/${docId}/`;

// 前へ/次へナビゲーション用に現在のページのインデックスを取得
const currentIndex = sortedDocs.findIndex(item => item.normalizedId === docId);
const prevPage = currentIndex > 0 ? sortedDocs[currentIndex - 1] : null;
const nextPage = currentIndex < sortedDocs.length - 1 ? sortedDocs[currentIndex + 1] : null;
---

<DocsLayout title={title} description={description} lang="ja">
  <div slot="header" class="language-switcher-container">
    <LanguageSwitcher currentLang="ja" pagePath={pagePath} hasTranslation={hasEnTranslation} />
  </div>
  <nav slot="sidebar">
    <h3>CLI ドキュメント</h3>
    <ul>
      <li><a href="/ja/">← ホームに戻る</a></li>
      {sortedDocs.map(item => {
        // normalizedIdを使用（既に正規化済み）
        const itemId = item.normalizedId;
        // indexの場合は /ja/cli/、それ以外は /ja/cli/xxx/ (末尾スラッシュ付き)
        const itemPath = itemId === 'index' ? '/ja/cli/' : `/ja/cli/${itemId}/`;
        const isActive = itemPath === currentPath;
        return (
          <li class:list={[{ active: isActive }]}>
            <a href={itemPath} aria-current={isActive ? 'page' : undefined}>
              {item.data.title || itemId}
            </a>
            {/* 現在のページでdoctocTOCがある場合は、そのページのサブメニューとして表示 */}
            {isActive && doctocToc && (
              <div class="page-toc" set:html={doctocToc} />
            )}
          </li>
        );
      })}
    </ul>
    
    <!-- ページ内目次 -->
    {headings.length > 0 && (
      <div class="page-table-of-contents">
        <TableOfContents headings={headings} />
      </div>
    )}
  </nav>

  <article set:html={htmlContent} />
  
  <PageNavigation
    prevPage={prevPage ? { id: prevPage.normalizedId, data: prevPage.data } : null}
    nextPage={nextPage ? { id: nextPage.normalizedId, data: nextPage.data } : null}
    basePath="/ja/cli/"
    prevLabel="← 前へ"
    nextLabel="次へ →"
  />
</DocsLayout>

<style>
  nav ul {
    list-style: none;
    padding: 0;
  }
  nav li {
    margin: 0.5rem 0;
  }
  nav li.active a {
    font-weight: bold;
    color: var(--color-primary, #0066cc);
  }
</style>
