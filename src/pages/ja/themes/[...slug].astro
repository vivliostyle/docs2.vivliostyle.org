---
/**
 * Themes ドキュメントページ（日本語版）
 * 動的ルーティング: /ja/themes/* にマッチ
 */
import DocsLayout from '../../../layouts/DocsLayout.astro';
import LanguageSwitcher from '../../../components/LanguageSwitcher.astro';
import PageNavigation from '../../../components/PageNavigation.astro';
import TableOfContents from '../../../components/TableOfContents.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const themesDocs = await getCollection('vivliostyle-themes-ja');
  const themesDocsEn = await getCollection('vivliostyle-themes-en');
  
  // 英語版に存在するIDのセットを作成
  const enIds = new Set(themesDocsEn.map(d => d.id));

  return themesDocs.map(doc => {
    // [...slug]パターンでは文字列でslugを渡す
    // indexの場合はundefinedでルートパス（/ja/themes/）に
    // それ以外はdoc.idをそのまま渡す
    const slug = doc.id === 'index' ? undefined : doc.id;

    return {
      params: { slug },
      props: { 
        doc, 
        themesDocs,
        hasEnTranslation: enIds.has(doc.id)
      },
    };
  });
}

const { doc, themesDocs, hasEnTranslation } = Astro.props;
const htmlContent = doc.rendered?.html || '';
const title = doc.data?.title || 'Themes ドキュメント';
const description = doc.data?.description || '';
const extractedToc = doc.data?.extractedToc; // 抽出したTOC（存在する場合）
const headings = doc.data?.headings || [];

// ページの順序を定義
const pageOrder = [
  'index',
  'spec',
  'gallery',
  'official',
  'development',
];

const sortedDocs = [...themesDocs].sort((a, b) => {
  const indexA = pageOrder.indexOf(a.id);
  const indexB = pageOrder.indexOf(b.id);
  // リストにないアイテムは最後に配置
  const orderA = indexA === -1 ? 999 : indexA;
  const orderB = indexB === -1 ? 999 : indexB;
  return orderA - orderB;
});

// 現在のページパス
const currentPath = doc.id === 'index' ? '/ja/themes/' : `/ja/themes/${doc.id}/`;
const pagePath = doc.id === 'index' ? '/themes/' : `/themes/${doc.id}/`;

// 前/次のナビゲーション
const currentIndex = sortedDocs.findIndex(item => item.id === doc.id);
const prevPage = currentIndex > 0 ? sortedDocs[currentIndex - 1] : null;
const nextPage = currentIndex < sortedDocs.length - 1 ? sortedDocs[currentIndex + 1] : null;
---

<DocsLayout title={title} description={description} lang="ja">
  <div slot="header" class="language-switcher-container">
    <LanguageSwitcher currentLang="ja" pagePath={pagePath} hasTranslation={hasEnTranslation} />
  </div>
  <nav slot="sidebar">
    <h3>Themes ドキュメント</h3>
    <ul>
      <li><a href="/ja/">← ホームに戻る</a></li>
      {sortedDocs.map(item => {
        const itemPath = item.id === 'index' ? '/ja/themes/' : `/ja/themes/${item.id}/`;
        const isActive = itemPath === currentPath;
        return (
          <li class:list={[{ active: isActive }]}>
            <a href={itemPath}>{item.data.title || item.id}</a>
            {/* 現在のページでextractedTOCがある場合は、そのページのサブメニューとして表示 */}
            {isActive && extractedToc && (
              <div class="page-toc" set:html={extractedToc} />
            )}
          </li>
        );
      })}
    </ul>
  </nav>

  <article set:html={htmlContent} />
  
  <PageNavigation
    prevPage={prevPage}
    nextPage={nextPage}
    basePath="/ja/themes/"
    prevLabel="← 前へ"
    nextLabel="次へ →"
  />
</DocsLayout>

<style>
  nav ul {
    list-style: none;
    padding: 0;
  }
  nav li {
    margin: 0.5rem 0;
  }
  nav li.active a {
    font-weight: bold;
    color: var(--color-primary, #0066cc);
  }
</style>
