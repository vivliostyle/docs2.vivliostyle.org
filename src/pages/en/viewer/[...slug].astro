---
/**
 * Vivliostyle.js Documentation Pages (English)
 * Dynamic routing: matches /en/viewer/*
 */
import DocsLayout from '../../../layouts/DocsLayout.astro';
import LanguageSwitcher from '../../../components/LanguageSwitcher.astro';
import PageNavigation from '../../../components/PageNavigation.astro';
import TableOfContents from '../../../components/TableOfContents.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const viewerDocs = await getCollection('vivliostyle-viewer-en');
  const viewerDocsJa = await getCollection('vivliostyle-viewer-ja');
  
  // 日本語版に存在するIDのセットを作成
  const jaIds = new Set(viewerDocsJa.map(d => d.id));

  return viewerDocs.map(doc => {
    // [...slug]パターンでは文字列でslugを渡す
    const slug = doc.id;

    return {
      params: { slug },
      props: { 
        doc, 
        viewerDocs,
        hasJaTranslation: jaIds.has(doc.id)
      },
    };
  });
}

const { doc, viewerDocs, hasJaTranslation } = Astro.props;
const htmlContent = doc.rendered?.html || '';
const title = doc.data?.title || 'Vivliostyle.js Documentation';
const description = doc.data?.description || '';
const doctocToc = doc.data?.doctocToc; // doctoc TOC（存在する場合）

// 見出しから目次を生成
const headings = doc.data?.headings || [];

// ページの順序を定義
const pageOrder = [
  'vivliostyle-viewer',
  'supported-css-features',
  'api',
  'contribution-guide',
];

const sortedDocs = [...viewerDocs].sort((a, b) => {
  const indexA = pageOrder.indexOf(a.id);
  const indexB = pageOrder.indexOf(b.id);
  // pageOrderにないものは最後に配置
  if (indexA === -1 && indexB === -1) return a.id.localeCompare(b.id);
  if (indexA === -1) return 1;
  if (indexB === -1) return -1;
  return indexA - indexB;
});

// 現在のページのインデックスを取得
const currentIndex = sortedDocs.findIndex(d => d.id === doc.id);
const prevPage = currentIndex > 0 ? sortedDocs[currentIndex - 1] : null;
const nextPage = currentIndex < sortedDocs.length - 1 ? sortedDocs[currentIndex + 1] : null;
---

<DocsLayout 
  title={title} 
  description={description}
  lang="en"
  section="viewer"
>
  <!-- サイドバーに目次を表示 -->
  <TableOfContents slot="sidebar" headings={headings} />

  <!-- 言語切り替え -->
  {hasJaTranslation && (
    <div class="language-switcher-container">
      <LanguageSwitcher 
        currentLang="en" 
        pagePath={`/viewer/${doc.id}`}
        hasTranslation={hasJaTranslation}
      />
    </div>
  )}

  <!-- メインコンテンツ -->
  <article class="docs-content">
    <h1>{title}</h1>
    
    <!-- doctoc TOCが存在する場合は表示 -->
    {doctocToc && (
      <div class="toc" set:html={doctocToc}></div>
    )}
    
    <div set:html={htmlContent}></div>
  </article>

  <!-- ページナビゲーション -->
  <PageNavigation
    prevPage={prevPage}
    nextPage={nextPage}
    basePath="/en/viewer"
    prevLabel="← Previous"
    nextLabel="Next →"
  />
</DocsLayout>

<style>
  .language-switcher-container {
    margin-bottom: 2rem;
  }

  .docs-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .docs-content h1 {
    margin-bottom: 1.5rem;
  }

  .toc {
    background: var(--color-bg-secondary, #f5f5f5);
    padding: 1rem;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .toc :global(ul) {
    list-style: none;
    padding-left: 1rem;
  }

  .toc :global(li) {
    margin: 0.5rem 0;
  }

  .toc :global(a) {
    color: var(--color-text-primary, #333);
    text-decoration: none;
  }

  .toc :global(a:hover) {
    text-decoration: underline;
  }
</style>
