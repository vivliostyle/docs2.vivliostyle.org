---
/**
 * Vivliostyle Reference Index Page (English)
 */
import DocsLayout from '../../../layouts/DocsLayout.astro';
import LanguageSwitcher from '../../../components/LanguageSwitcher.astro';
import { getCollection } from 'astro:content';

// Get reference index document
const indexDocs = await getCollection('vivliostyle-reference-index-en');
const indexDoc = indexDocs.find(doc => doc.id === 'index' || doc.id.endsWith('/index'));

// Check if Japanese translation exists
const indexDocsJa = await getCollection('vivliostyle-reference-index-ja');
const hasJaTranslation = indexDocsJa.length > 0;

const htmlContent = indexDoc?.rendered?.html || '';
const title = indexDoc?.data?.title || 'Reference';
const description = indexDoc?.data?.description || 'Reference documentation for Vivliostyle products';
---

<DocsLayout 
  title={title} 
  description={description}
  lang="en"
  section="reference"
>
  <!-- Language switcher in header -->
  {hasJaTranslation && (
    <div slot="header">
      <LanguageSwitcher 
        currentLang="en" 
        pagePath="/reference/"
        hasTranslation={hasJaTranslation}
      />
    </div>
  )}

  <article class="docs-content">
    {htmlContent ? (
      <Fragment set:html={htmlContent} />
    ) : (
      <div>
        <h1>{title}</h1>
        <p>Loading reference documentation...</p>
      </div>
    )}
  </article>
</DocsLayout>

<style>
  .docs-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .docs-content h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-text);
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .docs-content h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .docs-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .docs-content ul {
    list-style: disc;
    padding-left: 2rem;
    margin: 1rem 0;
  }

  .docs-content li {
    margin: 0.5rem 0;
  }

  .docs-content a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .docs-content a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .docs-content {
      padding: 1rem;
    }

    .docs-content h1 {
      font-size: 2rem;
    }
  }
</style>

