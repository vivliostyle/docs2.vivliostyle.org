---
/**
 * CLI ドキュメントページ（英語版）
 * 動的ルーティング: /en/cli/* にマッチ
 */
import DocsLayout from '../../../layouts/DocsLayout.astro';
import LanguageSwitcher from '../../../components/LanguageSwitcher.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const cliDocs = await getCollection('vivliostyle-cli-en');
  const cliDocsJa = await getCollection('vivliostyle-cli-ja');
  
  // 日本語版に存在するIDのセットを作成
  // 日本語ファイルは ja/ プレフィックスを除去したIDでチェックする必要がある
  // config.md と api-javascript.md は両方の言語で共有されているため、常にtrueとする
  const jaIds = new Set(
    cliDocsJa
      .map(d => {
        // ja/index.mdから生成された 'ja' IDは 'index' に変換
        if (d.id === 'ja') {
          return 'index';
        }
        // ja/ プレフィックスを除去
        if (d.id.startsWith('ja/')) {
          return d.id.substring(3);
        }
        return d.id;
      })
  );

  return cliDocs.map(doc => {
    // [...slug]パターンでは文字列でslugを渡す
    // indexの場合はundefinedでルートパス（/en/cli/）に
    // それ以外はdoc.idをそのまま渡す（例: "getting-started"）
    const slug = doc.id === 'index' ? undefined : doc.id;

    return {
      params: { slug },
      props: { 
        doc, 
        cliDocs,
        hasJaTranslation: jaIds.has(doc.id)
      },
    };
  });
}

const { doc, cliDocs, hasJaTranslation } = Astro.props;
const htmlContent = doc.rendered?.html || '';
const title = doc.data?.title || 'CLI Documentation';
const description = doc.data?.description || '';

// Sort by the order specified in index.md
const pageOrder = [
  'index',
  'getting-started',
  'themes-and-css',
  'using-config-file',
  'toc-page',
  'cover-page',
  'special-output-settings',
  'frontend-framework-support',
  'config',
  'api-javascript',
];

const sortedDocs = [...cliDocs].sort((a, b) => {
  const indexA = pageOrder.indexOf(a.id);
  const indexB = pageOrder.indexOf(b.id);
  // Items not in the list are placed at the end
  const orderA = indexA === -1 ? 999 : indexA;
  const orderB = indexB === -1 ? 999 : indexB;
  return orderA - orderB;
});

// Current page path (for index: /en/cli/, otherwise: /en/cli/xxx/)
const currentPath = doc.id === 'index' ? '/en/cli/' : `/en/cli/${doc.id}/`;
const pagePath = doc.id === 'index' ? '/cli/' : `/cli/${doc.id}/`;

// Previous/Next navigation: find current page index in sorted docs
const currentIndex = sortedDocs.findIndex(item => item.id === doc.id);
const prevPage = currentIndex > 0 ? sortedDocs[currentIndex - 1] : null;
const nextPage = currentIndex < sortedDocs.length - 1 ? sortedDocs[currentIndex + 1] : null;
---

<DocsLayout title={title} description={description} lang="en">
  <div slot="header" class="language-switcher-container">
    <LanguageSwitcher currentLang="en" pagePath={pagePath} hasTranslation={hasJaTranslation} />
  </div>
  <nav slot="sidebar">
    <h3>CLI Documentation</h3>
    <ul>
      <li><a href="/en/">← Back to Home</a></li>
      {sortedDocs.map(item => {
        // For index: /en/cli/, otherwise: /en/cli/xxx/ (with trailing slash)
        const itemPath = item.id === 'index' ? '/en/cli/' : `/en/cli/${item.id}/`;
        const isActive = itemPath === currentPath;
        return (
          <li class:list={[{ active: isActive }]}>
            <a href={itemPath} aria-current={isActive ? 'page' : undefined}>
              {item.data.title || item.id}
            </a>
          </li>
        );
      })}
    </ul>
  </nav>

  <article set:html={htmlContent} />
  
  <nav class="page-navigation">
    <div class="nav-links">
      {prevPage ? (
        <a href={`/en/cli/${prevPage.id === 'index' ? '' : prevPage.id + '/'}`} class="nav-link nav-prev">
          <span class="nav-label">← Previous</span>
          <span class="nav-title">{prevPage.data.title || prevPage.id}</span>
        </a>
      ) : (
        <div class="nav-link nav-prev nav-disabled"></div>
      )}
      
      {nextPage ? (
        <a href={`/en/cli/${nextPage.id === 'index' ? '' : nextPage.id + '/'}`} class="nav-link nav-next">
          <span class="nav-label">Next →</span>
          <span class="nav-title">{nextPage.data.title || nextPage.id}</span>
        </a>
      ) : (
        <div class="nav-link nav-next nav-disabled"></div>
      )}
    </div>
  </nav>
</DocsLayout>

<style>
  nav ul {
    list-style: none;
    padding: 0;
  }
  nav li {
    margin: 0.5rem 0;
  }
  nav li.active a {
    font-weight: bold;
    color: var(--color-primary, #0066cc);
  }
  
  /* Page Navigation */
  .page-navigation {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border, #e5e7eb);
  }
  
  .nav-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  
  .nav-link {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    border: 1px solid var(--color-border, #e5e7eb);
    border-radius: 8px;
    text-decoration: none;
    color: var(--color-text, #1f2937);
    transition: border-color 0.2s, background-color 0.2s;
  }
  
  .nav-link:not(.nav-disabled):hover {
    border-color: var(--color-primary, #0066cc);
    background-color: var(--color-bg-hover, #f9fafb);
  }
  
  .nav-link.nav-disabled {
    border: none;
  }
  
  .nav-prev {
    text-align: left;
  }
  
  .nav-next {
    text-align: right;
  }
  
  .nav-label {
    font-size: 0.875rem;
    color: var(--color-primary, #0066cc);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  
  .nav-title {
    font-weight: 500;
    color: var(--color-text, #1f2937);
  }
  
  @media (max-width: 640px) {
    .nav-links {
      grid-template-columns: 1fr;
    }
  }
</style>
