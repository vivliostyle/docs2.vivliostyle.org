---
/**
 * CLI ドキュメントページ（英語版）
 * 動的ルーティング: /en/cli/* にマッチ
 */
import DocsLayout from '../../../layouts/DocsLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const cliDocs = await getCollection('cli-docs-en');
  
  return cliDocs.map(doc => {
    // [...slug] 形式のrestパラメータには文字列を渡す（Astroが自動的に分割）
    // doc.slugはAstroが自動生成するが、常にidと同じとは限らない
    const slug = doc.id === 'index' ? undefined : doc.id;
    
    return {
      params: { 
        slug: slug
      },
      props: { doc }
    };
  });
}

const { doc } = Astro.props;
const htmlContent = doc.rendered?.html || '';
const title = doc.data?.title || 'CLI Documentation';
const description = doc.data?.description || '';
---

<DocsLayout title={title} description={description} lang="en">
  <nav slot="sidebar">
    <h3>CLI Documentation</h3>
    <ul>
      <li><a href="/en/">← Back to Home</a></li>
      <li><a href="/en/cli/index">Overview</a></li>
      <li><a href="/en/cli/getting-started">Getting Started</a></li>
      <li><a href="/en/cli/config">Configuration</a></li>
      <li><a href="/en/cli/using-config-file">Using Config File</a></li>
      <li><a href="/en/cli/themes-and-css">Themes and CSS</a></li>
      <li><a href="/en/cli/cover-page">Cover Page</a></li>
      <li><a href="/en/cli/toc-page">TOC Page</a></li>
      <li><a href="/en/cli/special-output-settings">Special Output Settings</a></li>
      <li><a href="/en/cli/frontend-framework-support">Frontend Framework Support</a></li>
      <li><a href="/en/cli/api-javascript">JavaScript API</a></li>
    </ul>
  </nav>

  <article set:html={htmlContent} />
</DocsLayout>
